{
  "name": "Someteria",
  "version": "1.0",
  "description": "WWW chat platform",
  "permissions": ["activeTab", "storage"],
  "background": {
    "scripts": [
      "background/runtime-es2015.js",
      "background/runtime-es5.js",
      "background/polyfills-es5.js",
      "background/polyfills-es2015.js",
      "background/vendor-es2015.js",
      "background/vendor-es5.js",
      "background/main-es2015.js",
      "background/main-es5.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "options_page": "options/index.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}
